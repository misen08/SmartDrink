<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoModoViernes">

    <TextView
        android:id="@+id/tvCantidadBebidasPreparadas"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Cantidad de bebidas preparadas: 107"
        android:textColor="@color/amarilloModoViernes"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.086" />

    <TextView
        android:id="@+id/tvFechaNotificacionMantenimiento"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Fecha de notificaciones de mantenimiento"
        android:textColor="@color/amarilloModoViernes"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.271" />

    <ListView
        android:id="@+id/lvFechaNotificaciones"
        android:layout_width="304dp"
        android:layout_height="196dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFechaNotificacionMantenimiento"
        app:layout_constraintVertical_bias="0.09" />


    <Button
        android:id="@+id/buttonMantenimientoVolver"
        android:layout_width="160dp"
        android:layout_height="53dp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="16dp"
        android:background="@color/amarilloModoViernes"
        android:text="Volver"
        android:textColor="@color/fondoModoViernes"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonMantenimientoRealizado"
        android:layout_width="160dp"
        android:layout_height="53dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp"
        android:background="@color/amarilloModoViernes"
        android:text="Mantenimiento realizado"
        android:textColor="@color/fondoModoViernes"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</android.support.constraint.ConstraintLayout>