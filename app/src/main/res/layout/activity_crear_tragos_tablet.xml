<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearTragos">

    <EditText
        android:id="@+id/editTextNombreBebida"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:hint="Nombre de la bebida"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewGusto1"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="80dp"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNombreBebida" />

    <TextView
        android:id="@+id/textViewGusto2"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="40dp"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGusto1" />

    <TextView
        android:id="@+id/textViewGusto3"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="40dp"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGusto2" />

    <TextView
        android:id="@+id/textViewGusto4"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="40dp"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGusto3" />

    <TextView
        android:id="@+id/textViewGusto5"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="40dp"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGusto4" />

    <TextView
        android:id="@+id/textViewGusto6"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="40dp"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGusto5" />

    <Spinner
        android:id="@+id/spinnerPorcentajesGusto1"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginEnd="160dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNombreBebida" />

    <Spinner
        android:id="@+id/spinnerPorcentajesGusto2"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginEnd="160dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerPorcentajesGusto1" />

    <Spinner
        android:id="@+id/spinnerPorcentajesGusto3"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginEnd="160dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerPorcentajesGusto2" />

    <Spinner
        android:id="@+id/spinnerPorcentajesGusto4"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginEnd="160dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerPorcentajesGusto3" />

    <Spinner
        android:id="@+id/spinnerPorcentajesGusto5"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginEnd="160dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerPorcentajesGusto4" />

    <Spinner
        android:id="@+id/spinnerPorcentajesGusto6"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginEnd="160dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerPorcentajesGusto5" />

    <Button
        android:id="@+id/botonVolver"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="90dp"
        android:background="@color/colorAccent"
        android:text="Volver"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/botonAgregar"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="90dp"
        android:background="@color/colorAccent"
        android:text="Agregar a la lista"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>