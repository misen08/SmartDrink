<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaDeTragos">

    <ListView
        android:id="@+id/listaTragos"
        android:layout_width="384dp"
        android:layout_height="0dp"
        android:layout_marginBottom="120dp"
        android:background="?android:attr/detailsElementBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ListView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonMic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:onClick="onClickBotonReconocimientoDeVoz"
        app:backgroundTint="@color/zxing_custom_viewfinder_laser"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listaTragos"
        app:srcCompat="@drawable/mic" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/botonCrearTrago"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        app:backgroundTint="@color/zxing_custom_viewfinder_laser"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listaTragos"
        app:srcCompat="@drawable/add_icon" />

    <ImageView
        android:id="@+id/lineaDivisora"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginBottom="120dp"
        android:background="@color/zxing_custom_viewfinder_laser"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@color/zxing_custom_viewfinder_laser" />

</android.support.constraint.ConstraintLayout>