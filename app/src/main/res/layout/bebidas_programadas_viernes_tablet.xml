<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoModoViernes">

    <TextView
        android:id="@+id/textViewBebidasProgramadas"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Tus bebidas programadas"
        android:textAlignment="center"
        android:textColor="@color/amarilloModoViernes"
        android:textSize="50sp" />

    <ListView
        android:id="@+id/listaBebidasProgramadas"
        android:layout_width="wrap_content"
        android:layout_height="810dp"
        android:layout_below="@id/textViewBebidasProgramadas"
        android:layout_marginBottom="120dp" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginBottom="60dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@color/amarilloModoViernes"
            android:text="Volver"
            android:textColor="@color/fondoModoViernes"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>